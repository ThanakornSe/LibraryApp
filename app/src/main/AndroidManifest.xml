<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mylibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyLibrary">
        <activity
            android:name=".Activities.WebsiteActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.Favorite"
            android:exported="true"
            android:label="@string/activity_favorite"/>
        <activity
            android:name=".Activities.CurrentlyRead"
            android:exported="true"
            android:label="@string/activity_currently_read"/>
        <activity
            android:name=".Activities.WishList"
            android:exported="true"
            android:label="@string/activity_wish_list"/>
        <activity
            android:name=".Activities.AlreadyReadBookActivity"
            android:exported="true"
            android:label="@string/activity_already_read_book"/>
        <activity
            android:name=".Activities.BookActivity"
            android:exported="true"
            android:label="@string/activity_book" />
        <activity
            android:name=".Activities.AllBooksActivity"
            android:exported="true"
            android:label="@string/activity_all_books"/>
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>